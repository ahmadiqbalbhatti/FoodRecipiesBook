                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8sp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingHorizontal="12sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8sp"
                            android:text="Ingredents"
                            android:textColor="@color/darkBrown_700"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ingredientsList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8sp"
                            android:text="Chicken, Eggs, Rice, Biryani masala"
                            android:textColor="@color/darkBrown_700"
                            android:textSize="20sp"
                            android:textStyle="italic" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50sp"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8sp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingHorizontal="12sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8sp"
                            android:text="Methods"
                            android:textColor="@color/darkBrown_700"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/description"
                            style="@style/TextAppearance.AppCompat.Display1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8sp"
                            android:text="Chicken, Eggs, Rice, White rice chicken biryani Biryani masala Chicken, Eggs, Rice, White rice chicken biryani Biryani masala Chicken, Eggs, Rice, White rice chicken biryani Biryani masala Chicken, Eggs, Rice, White rice chicken biryani Biryani masala Chicken, Eggs, Rice, White rice chicken biryani Biryani masala"
                            android:textColor="@color/darkBrown_700"
                            android:textSize="20sp"
                            android:textStyle="normal" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/editRecipeFAButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
